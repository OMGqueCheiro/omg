{
  "resources": {
    "postgres-db-omg": {
      "type": "container.v0",
      "image": "postgres:17-alpine",
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "-A scram-sha-256",
        "POSTGRES_PASSWORD": "{postgres-db-omg.inputs.password}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        }
      },
      "volumes": [
        {
          "name": "omg-postgres-data",
          "target": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ],
      "inputs": {
        "password": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    },
    "database": {
      "type": "value.v0",
      "connectionString": "Host={postgres-db-omg.bindings.tcp.host};Port={postgres-db-omg.bindings.tcp.port};Username=postgres;Password={postgres-db-omg.inputs.password};Database=OMGdb"
    },
    "omg-migrationworker": {
      "type": "project.v0",
      "path": "../../OMG.Worker/OMG.MigrationWorker/OMG.MigrationWorker.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "ConnectionStrings__database": "{database.connectionString}"
      }
    },
    "omg-api": {
      "type": "project.v0",
      "path": "../../OMG.Api/OMG.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "ConnectionStrings__database": "{database.connectionString}",
        "JwtSettings__SecretKey": "{omg-api.inputs.jwtsecret}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      },
      "inputs": {
        "jwtsecret": {
          "type": "string",
          "secret": true
        }
      }
    },
    "omg-blazorapp": {
      "type": "project.v0",
      "path": "../../OMG.BlazorApp/OMG.BlazorApp/OMG.BlazorApp.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "services__omg-api__http__0": "{omg-api.bindings.http.url}",
        "services__omg-api__https__0": "{omg-api.bindings.https.url}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    }
  }
}
