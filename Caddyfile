# Caddyfile para OMG - Produção
# HTTP apenas (sem HTTPS por enquanto - IP não suporta certificados válidos)

# Configuração global
{
    # Admin API desabilitada por segurança
    admin off
    
    # Desabilitar HTTPS automático
    auto_https off
    
    # Log em formato JSON
    log {
        format json
    }
}

# Servidor HTTP
http://201.23.75.91, http://:80 {
    # Headers de segurança
    header {
        # Security headers
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Remove server info
        -Server
        -X-Powered-By
    }

    # Logs específicos
    log {
        output file /var/log/caddy/access.log
        format json
    }

    # Reverse proxy para BlazorApp
    reverse_proxy blazorapp:8080 {
        # Health check
        health_uri /health
        health_interval 30s
        health_timeout 10s
        
        # Headers
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        
        # Timeouts
        transport http {
            dial_timeout 10s
            response_header_timeout 30s
        }
    }

    # Rota específica para API
    handle /api/* {
        reverse_proxy api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Encode responses
    encode gzip zstd

    # Handle errors
    handle_errors {
        respond "{err.status_code} {err.status_text}"
    }
}
